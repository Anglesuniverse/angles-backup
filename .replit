modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Daily Backup at 02:00 UTC"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Config Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Memory Backup at 03:00 UTC"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Weekly Recovery Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Health Monitor & Backup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Automated Test System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Sync Health Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angles AI Universe Scheduler"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "Daily Backup at 02:00 UTC"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python daily_backup_scheduler.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Config Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python config_monitor_service.py --interval 60"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Memory Backup at 03:00 UTC"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python daily_memory_backup_scheduler.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Weekly Recovery Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python weekly_recovery_scheduler.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Health Monitor & Backup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_all.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Automated Test System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python automated_scheduler.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Sync Health Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python tools/health_server.py --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Angles AI Universe Scheduler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m angles.cron_runner"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PYTHONPATH=\"$PWD:$PYTHONPATH\" && python -m uvicorn api.main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
